{
	"settings": {
		"do" : {
			"type" : "readdata",
			"from" : {
				"type" : "json",
				"source" : "filepath",
				"filepath" : "./testdata/testMBTAfeed.json"
			},
			
			"do" : {		
				"type" : "if",
				"if-condition" : {
		        	"operator" : "equal",
		        	"field-name" : "Trip",
		        	"field-value" : 328
		  		},
			
				"mycomment": "5:10 to Lowell",
			
				"then" : {
					"do" : {
						"type": "if",
						"if-condition" : {
			        		"operator" : "not-equal",
							"field-name": "Vehicle",
							"field-value": ""
						},
						"then": {
							"do" : {
								"type": "send-email",
								"email-parameters" : {
									"email-address": "olive.swanbeck@verizon.net",
									"email-body": "The 328 trip is vehicle #i%(Vehicle)s",
									"ignore-this": "send a text by emailing to phone@txt.att.net",
									"max-frequency" : "once-per-day"
								}
							}
						}
					}
				}
			}
		}
	}
}
